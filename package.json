    "cors": "^2.8.4",
    "ejs": "^2.5.9",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.12",
    "nodemon": "^1.17.3",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "concurrently": "^3.5.0",
    "dotenv": "^5.0.1",
    "fs": "0.0.1-security",
    "morgan": "^1.9.0"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ]
