    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.7",
    "nodemon": "^1.18.5",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "concurrently": "^3.6.1",
    "dotenv": "^5.0.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "fs": "0.0.1-security",
    "morgan": "^1.9.1"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ]
}
